// tsconfig used to compile the Rollup config
{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    // Don't generate d.ts files for the Rollup config
    "noEmit": true,
    // Accessed by `gts clean`
    "outDir": "build",
    "paths": {
      "kolmafia": ["./node_modules/kolmafia-types"]
    }
  },
  "exclude": ["spec", "src"]
}
