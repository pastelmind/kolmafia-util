{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ES5",
    "rootDir": ".",
    "outDir": "build",
    // Necessary because @types/mock-require imports @types/node, whose types
    // conflict with kolmafia-types
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "references": [{"path": "tsconfig.esm.json"}]
}
